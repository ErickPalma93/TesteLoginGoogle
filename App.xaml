<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppTeste"
             xmlns:converters="clr-namespace:AppTeste.Converters"
             x:Class="AppTeste.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Cores -->
            <Color x:Key="Primary">#4285F4</Color>
            <Color x:Key="Secondary">#34A853</Color>
            <Color x:Key="Tertiary">#FBBC05</Color>
            <Color x:Key="White">White</Color>
            <Color x:Key="Black">Black</Color>

            <!-- Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>

            <!-- Estilos -->
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{StaticResource White}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Black}" />
                <Setter Property="FontSize" Value="14" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>